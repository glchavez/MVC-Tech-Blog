<h1>Dashboard</h1>

<div class="card">
  <h4 class="card-header">Edit Post</h4>
  <div class="card-body">
    <form class="px-4 py-3">
      <div class="form-group">
        <label for="exampleDropdownFormEmail1">Title</label>
        <input type="text" class="form-control" id="exampleDropdownFormEmail1" placeholder="{{posts.title}}">
      </div>
      <div class="form-group">
        <label for="exampleDropdownFormPassword1">Content</label>
        <input type="text" class="form-control" id="exampleDropdownFormPassword1" placeholder="{{posts.content}}">
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
    </form>
    <div>
      <button class="btn btn-sm btn-danger" data-id="{{posts.id}}">DELETE</button>
    </div>
  </div>
</div>


